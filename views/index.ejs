<% include ./partials/header %>

<a href="/knownWords"> Known Words </a>
<a href="/learnNplay"><button> Learn & Play </button> </a> 

<h1> List Of Vocabulary </h1>


<% words.forEach(function(word){ %>
	<div class="container">
		<p><strong> <%= word.name %> </strong></p>
		<div class ="aboutWord">
			<p> Def:- <%= word.meaning %> </p>
			<p> Synonyms:- <%= word.synonym %> </p>
			<p> Sentence:- <%= word.sentence %> </p> 
			<input type="hidden" value= "<%= word.known %>>" class="flag">
		</div>
		<button class="more"> More </button>
		<form action="/unknown" method="POST">	
			<input type="hidden" name="id" value="<%= word.id %>">
		</form>
	</div>
<% }) %>

<% include ./partials/footer %>